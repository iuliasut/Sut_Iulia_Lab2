@page
@model Sut_Iulia_Lab2.Pages.Authors.IndexModel

@{
    ViewData["Title"] = "Authors List";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New Author</a>
</p>

@if (Model.Authors != null && Model.Authors.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model.Authors)
            {
                <tr>
                    <td>@author.FirstName</td>
                    <td>@author.LastName</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@author.ID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@author.ID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@author.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No authors available.</p>
}
