@page "{categoryId?}"
@model Sut_Iulia_Lab2.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Categories";
}

<h1>Index</h1>
<p>
    <a asp-page="Create" >Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Category Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Category)
        {
            <tr>
                <td>
                    <a asp-page="./Index" asp-route-categoryId="@category.ID">@category.CategoryName</a>
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@category.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@category.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@category.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.SelectedCategoryId != null && Model.Books.Any())
{
    <h2>Books in @Model.Category.FirstOrDefault(c => c.ID == Model.SelectedCategoryId)?.CategoryName</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author.FullName</td>
                </tr>
            }
        </tbody>
    </table>
}
